        <client_script><![CDATA[api.controller=function($scope,$rootScope,spUtil,$timeout) {
  /* widget controller */
  var c = this;
	$timeout(function(){		
		var init_charger = $scope.page.g_form.getValue('charger');
		//console.log('got charger '+init_charger);
		spUtil.get('charger-card',{charger_id:init_charger}).then(function(response){
			c.charger = response;
		});
	});
	
	$rootScope.$on("field.change", function(evt, parms) {
	if (parms.field.name == 'charger') {
		var _options = {charger_id:parms.newValue};
		spUtil.get('charger-card',_options).then(function(response){
			c.charger= response;
		});
	}
  });

};]]></client_script>
